{
  "manifest_version": 3,
  "name": "Novora",
  "version": "1.0.0",
  "action": { "default_title": "Novora" },
  "background": { "service_worker": "background.js" },
  "permissions": ["storage", "tabs", "system.display"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
